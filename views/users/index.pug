extends ../layouts/common

block content
  h1
    span.mr-3 All User
  table.table
    tr
      th Avatar
      th Name
      th Phone
      th Actions
    each user in users
      tr
        td
          img(src=user.avatar, alt="",width="32")
        td=user.name
        td=user.phone
        td
          a.btn-btn-light(href='/users/'+ user.id) View